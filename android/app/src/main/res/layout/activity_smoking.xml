<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/questionbackground"
    tools:context=".SmokingHistory">


    <TableLayout
        android:layout_width="322dp"
        android:layout_height="175dp"
        android:layout_marginStart="233dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="151dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textView8"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/lemonada_bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/smoking"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start">
            <RadioButton
                android:id="@+id/radio_smoking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/ActiveSmoker"
                android:fontFamily="@font/lemonada_bold"
                android:textColor="@color/colorPrimaryDark">
            </RadioButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start">

            <RadioButton
                android:id="@+id/radio_nosmoking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/NonSmoker"
                android:fontFamily="@font/lemonada_bold"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark">
            </RadioButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"  android:gravity="start">

            <RadioButton
                android:id="@+id/radio_passivesmoker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/PassiveSmoker"
                android:fontFamily="@font/lemonada_bold"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark">
            </RadioButton>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>